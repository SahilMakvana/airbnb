<% layout("/layouts/boilerplate.ejs") -%>
<body>
    <div class="row mt-3">
        <div class="col-6 card mb-3 offset-3" id="show-div">
            <img class="card-img-top show-img" src="<%= listing.image %>" alt="Card image cap" />
            <div class="card-body">
                <h5 class="card-title mb-1"><b><%= listing.title %></b></h5>
                <p class="card-text mb-1"><small class="text-muted"><%= listing.description %></small></p>
                <p class="card-text mb-1">&#8377; <%= (listing.price).toLocaleString("en-IN") %> / night</p>
                <p class="card-text mb-1"><%= listing.location %>, <%= listing.country %></p>
                <p class="card-text mb-1"></p>
                <div class="row mt-4">
                    <div class="col-3">
                        <a href="/listing/<%= listing._id %>/edit"><button type="button" class="btn btn-dark">Edit this listing</button></a>
                    </div>
                    <div class="col-3">
                        <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                            <button class="btn btn-dark">Delete</button>
                        </form>
                    </div>
                </div>
                <!-- 
                <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p> -->
            </div>
        </div>
    </div>

